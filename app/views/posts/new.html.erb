<!DOCTYPE html>
<html>
  <head>
    <title>BlogApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= stylesheet_link_tag "/users/posts.css" %>
  </head>

  <body>
    <div class="container">
          <%= form_with model: @post, url: user_posts_path(@user), method: :post, class: "comments_form" do |f| %>
            <div>
                <%= f.label :title %>
                <%= f.text_field :title %>
                <%= f.label :text %>
                <%= f.text_field :text %>
            </div>
            <%= f.submit "Create" %>
          <% end %>

    </div>
  </body>
</html>
