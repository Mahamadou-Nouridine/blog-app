<!DOCTYPE html>
<html>
  <head>
    <title>BlogApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= stylesheet_link_tag "/users/posts.css" %>
  </head>

  <body>
    <div class="container">
        <div class="user-info">
            <%=image_tag(@posts[0].author.photo, class: 'profile-photo')%>

            <div class="user-details">
                <h3><%=@posts[0].author.name%></h3>
                <p>Number of post: <%=@posts.count%></p>
            </div>
        </div>

        <ul class="posts">
          <%@posts.each do |post|%>
          <li class="post">
            <div>
              <%= link_to "/users/#{post.author.id}/posts/#{post.id}" do %>
              <h3><%=post.title%></h3>
            <%end%>
              <p>
                <%=post.text%>
              </p>
              <p class='likes-coomments'>Comments: <%=post.comments.count%>, Likes: <%=post.likes.count%></p>
            </div>
            <div class="comments">
                <ul class="commens-list">
                <%post.recent_comments.each do |comment|%>
                    <li>
                        <p><%="#{comment.author.name}: #{comment.text}"%></p>
                    </li>
                  <%end%>
                </ul>
            </div>
          </li>
          <%end%>
        </ul>
        <%=link_to "/users/#{@user.id}/posts/new" do%>
          <%=button_to "New post", class: 'all-posts'%>
        <%end%>
    </div>
  </body>
</html>
