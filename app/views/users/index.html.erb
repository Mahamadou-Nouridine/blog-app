<!DOCTYPE html>
<html>
  <head>
    <title>BlogApp</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= stylesheet_link_tag "/users/index.css" %>
  </head>

  <body>
    <div class="container">
    <h1>
    </h1>
        <ul class="user-list">
           <%@users.each do |user|%>
             <li>
                 <%=image_tag(user.photo, class: 'profile-photo')%>

                 <div class="user-details">
            <%= link_to "/users/#{user.id}" do %>
                     <h3><%=user.name%></h3>
            <%end%>
                     <p>Number of post: <%=user.posts.count%></p>
                 </div>
             </li>
            <%end%>
        </ul>
    </div>
  </body>
</html>
